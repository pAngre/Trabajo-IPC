<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="521.0" prefWidth="1008.0" styleClass="body" stylesheets="@../estilos/estiloPrinLogin.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.PrincipalLoginController">
   <right>
      <VBox prefHeight="521.0" prefWidth="171.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="botonMisDatos" alignment="CENTER" mnemonicParsing="false" onAction="#clickedMisDatos" prefHeight="75.0" prefWidth="130.0" text="Mis datos">
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
               <graphic>
                  <ImageView fx:id="misDatos" fitHeight="53.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="botonLogout" alignment="CENTER" mnemonicParsing="false" onAction="#clickedLogout" prefHeight="75.0" prefWidth="130.0" text="Logout">
               <VBox.margin>
                  <Insets bottom="10.0" right="20.0" />
               </VBox.margin>
               <graphic>
                  <ImageView fx:id="logout" fitHeight="53.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
   </right>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="botonReservar" contentDisplay="TOP" mnemonicParsing="false" onAction="#clickedReservar" prefHeight="125.0" prefWidth="300.0" text="Reservar Pista">
               <graphic>
                  <ImageView fx:id="reservar" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
               <padding>
                  <Insets top="20.0" />
               </padding>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="botonMisReservas" contentDisplay="TOP" mnemonicParsing="false" onAction="#clickedMisReservas" prefHeight="125.0" prefWidth="300.0" text="Mis Reservas">
               <HBox.margin>
                  <Insets left="50.0" right="50.0" />
               </HBox.margin>
               <graphic>
                  <ImageView fx:id="misReservas" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
               <padding>
                  <Insets top="20.0" />
               </padding>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="botonVerDispo" contentDisplay="TOP" mnemonicParsing="false" onAction="#clickedVerDispo" prefHeight="125.0" prefWidth="300.0" text="Ver Disponibilidad de Pistas">
               <graphic>
                  <ImageView fx:id="verDispo" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
               <padding>
                  <Insets top="20.0" />
               </padding>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </center>
   <left>
      <VBox maxHeight="-Infinity" prefHeight="495.0" prefWidth="132.0" BorderPane.alignment="CENTER" />
   </left>
   <top>
      <Text fx:id="textTitulo" fill="#8aff59" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="25.0" />
         </BorderPane.margin></Text>
   </top>
   <bottom>
      <Circle fx:id="logo" fill="WHITE" radius="128.0" stroke="BLACK" strokeType="INSIDE" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="100.0" />
         </BorderPane.margin>
      </Circle>
   </bottom>
</BorderPane>
